
@{
    ViewData["Title"] = "ResetPassword";
}
@model ForgetPasswordViewModel

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}   @*buradaki scriptler layouta enjekte olacak*@

<div class="row">

    <div class="col-md-4 offset-md-4">
       
        <div class="alert alert-info">Şifre Yenileme Linki Mail Adresinize Gönderilecektir</div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
            @*genel hatalar burada gözükecek*@

        </div>
        

        <form method="post">
            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"> </label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>

    </div>
</div>

