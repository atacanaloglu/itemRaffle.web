
@{
    ViewData["Title"] = "SignIn";
}
@model SignInViewModel

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}  @*buradaki scriptler layouta enjekte olacak*@

<div class="row">

    <div class="col-md-4 offset-md-4">
        <h1>Üye Giriş</h1>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
            @*genel hatalar burada gözükecek*@

        </div>
        
        <form asp-controller="Home" asp-action="SignIn" asp-route-returnurl="@Context.Request.Query["returnURL"]" method="post">
            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"> </label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-md-4 col-form-label" asp-for="Password"> </label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe" for="RememberMe"></label>
                    </div>
                </div>
                <div class="col-md-6 me-0">
                    <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ForgetPassword">Şifremi unuttum </a> 
                </div>
            </div>

           
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
            
        </form>

    </div>
</div>



