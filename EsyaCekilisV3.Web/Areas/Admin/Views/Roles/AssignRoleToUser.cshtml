
@{
    ViewData["Title"] = "AssignRoleToUser";
}
@model List<AdminModel.AssignRoleToUserViewModel>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Rol Atama</h2>
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
           
            @for (int i=0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input"asp-for="@Model[i].Exist"> @*var mı diye kontrol etmesi için backend*@
                    <label class="form-check-label" for="exampleCheck1">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name"> @*backend e gidecek*@
                    <input type="hidden" asp-for="@Model[i].Id">   @*backend e gidecek*@
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Rol ata" class="btn btn-primary" />
            </div>

        </form>
        <div class="mt-4">
            <a asp-controller="Home" asp-action="UserList">Kullanıcı Listesine Geri Dön</a>
        </div>

    </div>
</div>

